%header
  .container
    .full_width
      %h1 Your visit with the Taylor family

.container
  .breadcrumbs.full_width
    =link_to root_path do
      =fa_icon "chevron-left"
      Return to your cases

  .visit_details_card.card.full_width
    %h3
      The Taylor Family -
      = Time.now.strftime("%d/%m/%Y")
      14:00
      %span.edit_link
        =link_to 'Edit', family_visit_details_path
    %hr
    .accordion
      .accord-single
        .accord-toggle
          Visit details
          =fa_icon "chevron-down"
        .accord-cont.inner_container
          .half
            .bold Visit purpose
            %ul.default
              %li Housing
              %li School attendance
          .half
            .bold Family's input
            %p My uncle wants to see the children


  .visit_input_card.card.full_width
    %h3
      Visit Notes
      =link_to family_visit_save_path, class: 'button', id: 'save_visit' do
        =fa_icon "check"
        Save
        %span Visit
    %hr
    #trumbowyg

    %br

    %h3 Agreed actions
    %hr
    %form#actions_container.actions_container

    #add_action.button.secondary
      =fa_icon "plus"
      Add action
    =link_to family_visit_save_path, class: 'button', id: 'save_visit' do
      =fa_icon "check"
      Save
      %span Visit
