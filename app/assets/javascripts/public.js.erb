$(document).ready(function() {

  $('.accordion').each(function() { $(this).accordion() });

  $('#trumbowyg').trumbowyg({
    svgPath: "<%= asset_path('wysiwyg_icons.svg') %>",
    autogrow: true,
    btns: ['strong', 'em', '|', 'upload'],
    plugins: {
      // Add imgur parameters to upload plugin
      upload: {
        serverPath: 'https://api.imgur.com/3/image',
        fileFieldName: 'image',
        headers: {
            'Authorization': 'Client-ID 9e57cb1c4791cea'
        },
        urlPropertyName: 'data.link'
      }
    }
  });

  $('#actions_display').displayPage();

  $('#actions_container').meetingsPage();



  $('#not_successful').notSuccessful();


  var visit_shared = localStorage.getItem("visit_shared");

  if (visit_shared != null) {
    $('#alerts').slideDown().delay(2500).slideUp();
    localStorage.removeItem("visit_shared");
  }
});
